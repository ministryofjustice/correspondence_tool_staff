- content_for :page_title do
  - t('page_title.login')

/[if lte IE 9]
  .error-summary(role="group" aria-labelledby="old-browser" tabindex='-1')
    h1.heading-medium.notice-summary-heading(id= "old-browser")
      | This service may not work using this version of Internet Explorer
    p
      | Please use another web browser (for example Firefox).
    p
      = "If you do not have another web browser, email the support team: "
      = mail_to 'correspondence-gg@justice.gov.uk', 'correspondence-gg@justice.gov.uk'

- content_for :heading
  = t('devise.users.sign_in.title')

= render partial: 'layouts/header'

.grid-row
  .column-full
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.email_field :email, autofocus: true

      = f.password_field :password, autocomplete: "off"

      .form-group
        = f.submit t('devise.users.sign_in.button'), class: "button"

.grid-row
  .column-full
    = render "devise/shared/links"
