- content_for :page_title do
  - t('page_title.settings_business_unit',
          business_group: @team.business_group.name,
          directorate: @team.directorate.name,
          business_unit: @team.name)

.grid-row
  .column-two-thirds
    h2.heading-medium style='display:inline'
      | Team details
  .column-one-third
    = link_to 'Edit', edit_team_path(@team)

  .column-full
    hr

.grid-row
  .column-two-thirds
    p.bold-small
      = "Role "
      ul.areas-covered.list.list-bullet
        li= team.role.humanize
.grid-row
  .column-two-thirds
    p.bold-small
      = "Correspondence types "
      ul.areas-covered.list.list-bullet
        - team.correspondence_types.each do |cat|
          li= cat.name

= render partial: 'shared/areas_covered_list', locals: { team: @team }

hr
.grid-row
  .column-full
    h2.heading-medium
      = t('.team_members')

.grid-row
  .column-full.table-container.container
    table.report.table-font-xsmall
      colgroup
        col
        col
        col
        col
        col
      thead
        th scope='col'
          | Name
        th scope='col'
          | Email
        th scope='col'
          | No. of cases
        th scope='col'
          | Actions
      tbody
        - @active_users.each do |user|
          tr
            td aria-label="Name"
              = link_to user.full_name, user_path(user.id)
            td aria-label="Email"
               = user.email
            td aria-label="Number of active cases"
              = @case_counts[user.id]
            td aria-label="Actions"
              = link_to 'Edit', edit_user_path(user, team_id: @team.id)

p

- if Pundit.policy(current_user, team).can_add_new_responder?
  .grid-row
    .column-full
      = link_to(t('.new_team_member'),
                new_team_user_path(team_id: team.id, role: team.role),
                id: 'action--new-responder-user',
                class: 'button')
hr

- if Pundit.policy(current_user, team).move?
  p = link_to "Move business unit", move_to_directorate_team_path(team.id), id: 'move-team-link'

- if Pundit.policy(current_user, team).join?
  p = link_to "Join business unit", join_teams_team_path(team.id), id: 'join-team-link'

p = show_deactivate_link_or_info(current_user, @team)
