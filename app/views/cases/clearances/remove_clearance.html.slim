= GovukElementsErrorsHelper.error_summary @case,
        "#{pluralize(@case.errors.count, t('common.error'))} #{ t('common.summary_error')}", ""

- content_for :heading
  = t('cases.remove_clearance.heading')

- content_for :sub_heading
  = @case.number

= render partial: 'layouts/header'

div
  = t('cases.remove_clearance.explanation')
  br
  strong
    = @case.subject

.removal-form
  = form_for [@case], url: unflag_taken_on_case_for_clearance_case_path(@case) do |f|
    label.form-label for="unflag_for_clearance_message"
      = t('cases.remove_clearance.why')
    textarea.form-control name="message" id="unflag_for_clearance_message"
    .button-holder
    = f.submit 'Submit', class:'button'
