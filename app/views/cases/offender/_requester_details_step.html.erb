<h1>Who is making the subject access request? </h1>

<%= f.radio_button_fieldset(:third_party) do |fieldset|
      - fieldset.radio_input(true, text_method: :humanize)
        = f.text_field :name
        = f.text_field :third_party_relationship
      - fieldset.radio_input(false, text_method: :humanize) %>

<%= f.text_area :postal_address, {rows: 4} %>

<%= link_to "Previous", "/cases/new/offender"%>

<%= form_for @case, url: cases_offender_path do |f| %>
  <input type="hidden" name="current_step" value="<%= @case.current_step %>" %>
  <%= f.submit "Continue" %>
<% end %>
